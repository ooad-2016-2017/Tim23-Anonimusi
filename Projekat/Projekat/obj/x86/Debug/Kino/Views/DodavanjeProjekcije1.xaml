<Page
    x:Class="Projekat.Kino.Views.DodavanjeProjekcije1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Projekat.Kino.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.991"/>
                    <GradientStop Color="#FF06082C"/>
                    <GradientStop Color="#FF9CE1F6" Offset="0.745"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Image x:ConnectionId='1' x:Name="image" HorizontalAlignment="Center" Height="100" Margin="95,5,95,0" VerticalAlignment="Top" Source="logo.jpg" Width="170" Stretch="Fill"/>
            <TextBlock Text="Dodavanje projekcije" Foreground="White" FontWeight="Bold" Grid.Row="0" FontSize="16px" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10,0,10,508" />
            <TextBlock Text="Film: " VerticalAlignment="Center" Margin="10,164,0,456" />
            <TextBlock Text="naziv " VerticalAlignment="Center" Margin="126,168,138,452" />
            <TextBlock Text="Sedmica: " VerticalAlignment="Center" Margin="10,214,0,406" />
            <ListBox x:ConnectionId='2' x:Name="listBox" HorizontalAlignment="Left" Height="25" Margin="126,209,0,0" VerticalAlignment="Top" Width="96"/>
            <TextBlock Text="Cijena ulaznice:" VerticalAlignment="Center" Margin="10,244,0,376" />

            <TextBox x:ConnectionId='3' x:Name="textBox" HorizontalAlignment="Left" Height="18" Margin="126,246,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="96"/>
            <TextBlock VerticalAlignment="Center" Margin="10,292,0,328">
                <Run Text="Sala"/>
                <Run Text=": "/>
            </TextBlock>
            <ListBox x:ConnectionId='4' x:Name="listBox_Copy" HorizontalAlignment="Left" Height="25" Margin="126,292,0,0" VerticalAlignment="Top" Width="96"/>
            <TextBlock VerticalAlignment="Center" Margin="10,338,0,282" >
                <Run Text="Dan"/>
                <Run Text=": "/>
            </TextBlock>
            <ListBox x:ConnectionId='5' x:Name="listBox_Copy1" HorizontalAlignment="Left" Height="25" Margin="126,333,0,0" VerticalAlignment="Top" Width="96"/>
            <TextBlock VerticalAlignment="Center" Margin="10,373,0,247" >
                <Run Text="Termin"/>
                <Run Text=": "/>
            </TextBlock>
            <ListBox x:ConnectionId='6' x:Name="listBox_Copy2" HorizontalAlignment="Left" Height="25" Margin="126,368,0,0" VerticalAlignment="Top" Width="96"/>
            <Button x:ConnectionId='7' Content="Potvrdi" x:Name="Ptvrdi" BorderBrush="Blue" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Margin="85,465,95,143" />

        </Grid>

    </Grid>
</Page>

