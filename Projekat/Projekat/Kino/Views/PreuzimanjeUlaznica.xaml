            <TextBox HorizontalAlignment="Left" MinHeight="20" Height="20" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Padding="8,0,0,0" Background="White" Foreground="#FFCF3103" FontSize="11" Margin="150,128,0,0" Width="160"/>
