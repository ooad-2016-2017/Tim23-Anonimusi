            <TextBlock HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="Ime i prezime:" VerticalAlignment="Top" Foreground="#FFCF3103" FontSize="15" Margin="10,40,0,0" Width="150"/>
