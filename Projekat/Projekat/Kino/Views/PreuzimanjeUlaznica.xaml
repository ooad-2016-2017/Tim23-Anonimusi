            <TextBlock HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="Šifra:" VerticalAlignment="Top" Foreground="#FFCF3103" FontSize="15" Margin="10,216,0,0" Width="150"/>
            <TextBlock HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="Ukupan iznos:" VerticalAlignment="Top" Foreground="#FFCF3103" FontSize="15" Margin="10,194,0,0" Width="150"/>


            <TextBox HorizontalAlignment="Left" MinHeight="20" Height="20" TextWrapping="Wrap" Text="" FontSize="11" Padding="8,0,0,0" VerticalAlignment="Top" Background="White" Foreground="#FFCF3103" Margin="150,40,0,0" Width="160" />
