        </RelativePanel>
        <Button Content="Nazad" BorderBrush="#FFCF3103" Foreground="#FFCF3103" Background="#FFE4ECF9" HorizontalAlignment="Left" Margin="10,585,0,0" VerticalAlignment="Top" Width="143" Height="30"/>
        <Button Content="Potvrdi rezervaciju" BorderBrush="#FFCF3103" Background="#FFE4ECF9" Foreground="#FFCF3103" HorizontalAlignment="Left" Margin="200,585,10,0" VerticalAlignment="Top" Width="143" Height="30"/>



    </Grid>
