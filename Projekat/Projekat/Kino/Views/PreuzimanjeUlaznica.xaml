            <Button Content="Traži rezervaciju" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="150" Margin="162,107,0,0" Foreground="White" BorderBrush="#FFD35632" Background="#FFD35632" FontSize="18"/>
            <TextBox HorizontalAlignment="Left" Height="35" TextWrapping="Wrap" Text="*****"  VerticalAlignment="Top" Margin="160,52,0,0" Background="White" Width="160"/>
        </RelativePanel>
